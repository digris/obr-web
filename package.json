{
  "name": "openbroadcast.ch",
  "version": "0.0.112",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite",
    "build": "vue-tsc --noEmit && vite build --base=/static/",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "lint:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:stylelint": "stylelint \"**/*.{vue,scss}\"",
    "fix": "yarn fix:eslint && yarn fix:stylelint",
    "fix:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "fix:stylelint": "stylelint \"**/*.{vue,scss}\" --fix",
    "schema:generate": "openapi --input http://local.obr-next:8080/api/v1/schema-json/ --output ./obr_ui/typings/api/"
  },
  "engines": {
    "node": ">=16.0.0 <21.0.0"
  },
  "dependencies": {
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@sentry/tracing": "^7.45.0",
    "@sentry/vue": "^7.45.0",
    "@stripe/stripe-js": "^1.24.0",
    "@vueuse/core": "^10.1",
    "@vueuse/router": "^10.1",
    "axios": "^0.26.1",
    "axios-retry": "^3.4.0",
    "bowser": "^2.11.0",
    "color": "^4.2.3",
    "email-validator": "^2.0.4",
    "hls.js": "1.4.4",
    "lodash-es": "^4.17.21",
    "loglevel": "^1.8.0",
    "luxon": "^2.4",
    "mitt": "^3.0.0",
    "pinia": "^2.0.0-rc.10",
    "pinia-plugin-persistedstate": "^3.1.0",
    "pulltorefreshjs": "^0.1.22",
    "qrcode.vue": "^3.3.3",
    "qs": "^6.10.3",
    "sass": "^1.49.9",
    "semver": "^7.5.2",
    "shifty": "^2.17.1",
    "showdown": "^2.1.0",
    "vanilla-cookieconsent": "^2.8.9",
    "vue": "3.3.4",
    "vue-i18n": "^9.1.9",
    "vue-router": "4.2.2",
    "vue3-runtime-template": "^1.0.2",
    "web-vitals": "^5.0.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/hls.js": "^1.0.0",
    "@types/jsdom": "^16.2.14",
    "@types/lodash-es": "^4.17.6",
    "@types/luxon": "^2.3.0",
    "@types/node": "^16.11.25",
    "@types/node-schedule": "^1.3.2",
    "@types/pulltorefreshjs": "^0.1.5",
    "@types/qs": "^6.9.7",
    "@types/showdown": "^2.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "fixed-size-array": "^0.1.1",
    "jsdom": "^19.0.0",
    "openapi-typescript-codegen": "^0.23.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.5.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "stylelint": "^15.3.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.3.0",
    "typescript": "~4.5.5",
    "vite": "^4.3.5",
    "vite-plugin-static-copy": "^2.2.0",
    "vitest": "^0.32",
    "vue-tsc": "^1.6.5"
  }
